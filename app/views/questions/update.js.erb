document.querySelector(".flashes")
    .innerHTML = '<%= render 'shared/flash' %>';
<% if user&.author_of?(question) %>
  document.querySelector(".errors")
      .innerHTML = '<%= render 'shared/errors', resource: question %>';
  <% unless question.errors.present? %>
  document.querySelector(".question").innerHTML = '<%= j render question %>'
  <% end %>
<% end %>


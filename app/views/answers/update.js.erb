document.querySelector(".flashes")
    .innerHTML = '<%= render 'shared/flash' %>';

<% if user&.author_of?(answer) %>
  document.querySelector(".errors")
      .innerHTML = '<%= render 'shared/errors', resource: answer %>';
  <% unless answer.errors.present? %>
  document.querySelector(".answers").innerHTML = '<%= j render @question.answers.by_best %>'
  <% end %>
<% end %>
